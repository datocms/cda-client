{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es2018", "es7", "es6", "dom"],
    "declarationDir": "dist/types",
    "outDir": "dist/cjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/jest-dom.d.ts", "__test__"],
  "exclude": ["node_modules", "dist"]
}
